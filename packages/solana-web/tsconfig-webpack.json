{
  "compilerOptions": {
    "declaration": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "composite": false,
    "outDir": "dist/esm",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    // "emitDeclarationOnly": true,
    "allowJs": false,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "importHelpers": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false
  },
  "include": ["src/**/*"]
}
