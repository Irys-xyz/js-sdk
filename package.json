{
    "name": "@irys/sdk-monorepo",
    "private": true,
    "description": "A JavaScript Framework for the Irys Network",
    "keywords": [
        "irys",
        "framework"
    ],
    "homepage": "https://irys.xyz",
    "repository": {
        "url": "https://github.com/irys-xyz/js-sdk.git"
    },
    "license": "MIT",
    "author": "Jesse <jesse@irys.xyz>",
    "workspaces": [
        "packages/*",
        "examples"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:nocache": "turbo run build --no-cache",
        "build:docs": "typedoc",
        "clean": "turbo run clean",
        "format": "prettier --check packages/",
        "format:fix": "prettier --write packages/",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "packages:change": "changeset",
        "packages:new": "node scripts/generate-new-package.mjs",
        "packages:publish": "turbo run build && changeset publish --no-git-tag",
        "packages:version": "changeset version",
        "test": "turbo run test"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "devDependencies": {
        "@ava/typescript": "^5.0.0",
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@babel/preset-typescript": "^7.24.7",
        "@changesets/changelog-github": "^0.5.0",
        "@changesets/cli": "^2.27.7",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^5.0.7",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/node": "^22.5.3",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "ava": "^6.1.3",
        "chalk": "^5.3.0",
        "concurrently": "^8.2.2",
        "depcheck": "^1.4.7",
        "eslint": "^9.9.1",
        "eslint-plugin-prettier": "^5.2.1",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "rollup": "^4.21.1",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "ts-node": "^10.9.2",
        "tsc-esm-fix": "^3.0.2",
        "tsconfig-paths": "^4.2.0",
        "turbo": "^2.1.0",
        "typedoc": "^0.26.6",
        "typescript": "^5.5.4"
    },
    "packageManager": "pnpm@9.1.1",
    "engines": {
        "node": ">=18.0"
    },
    "dependencies": {
        "tslib": "^2.7.0"
    }
}